<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\..\FrameXML\UI.xsd">

    <Frame parentKey="tabContentConfig" name="PLGuildBankFrameTabConfig" inherits="ItemButtonTemplate" virtual="true">
        <Size>
            <AbsDimension x="200" y="200"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="$parent">
                <Offset x="10" y="-10"/>
            </Anchor>
            <Anchor point="BOTTOMRIGHT" relativeTo="$parent">
                <Offset x="-10" y="10"/>
            </Anchor>
        </Anchors>
        <!--<Layers>
            <Layer level="BACKGROUND" textureSubLevel="-5">
                <Texture parentKey="Bg" file="Interface\GuildBankFrame\GuildVaultBG" horizTile="true" vertTile="true" setAllPoints="true"/>
            </Layer>
        </Layers> -->
        <Frames>
            <Frame parentKey="configRankLabel" name="$parentGuildRankConfigLabel">
                <Size>
                    <AbsDimension x="170" y="15" />
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent">
                        <Offset>
                            <AbsDimension x="10" y="-10" />
                        </Offset>
                    </Anchor>
                    <Anchor point="TOPRIGHT" relativeTo="$parent">
                        <Offset>
                            <AbsDimension x="-10" y="-10" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer>
                        <FontString parentKey="Text" name="$parentText" font="Fonts\FRIZQT__.TTF" text="PLGuild_BANK_CONFIG_RANK" justifyH="LEFT">
                            <Anchors>
                                <Anchor point="TOPLEFT" />
                                <Anchor point="BOTTOMRIGHT" />
                            </Anchors>
                            <FontHeight>
                                <AbsValue val="10" />
                            </FontHeight>
                            <Color r="1" g="0.8196079" b="0" />
                            <Shadow>
                                <Color r="0" g="0" b="0" />
                                <Offset>
                                    <AbsDimension x="1" y="-1" />
                                </Offset>
                            </Shadow>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            <Button parentKey="configRankDropDown" name="$parentGuildRankDropDown" inherits="UIDropDownMenuTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentGuildRankConfigLabel" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="-15" y="0" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
				<OnShow>
                    self:GetParent():GuildRanksDropDownLoad(self)
				</OnShow>
			</Scripts>
            </Button>
        </Frames>
    </Frame>

</Ui>
